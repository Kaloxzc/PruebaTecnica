@model IEnumerable<Prueba_Tecnica.Models.Habitacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAlojamientoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAlojamientoNavigation.IdAlojamiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdHabitacion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdHabitacion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdHabitacion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
