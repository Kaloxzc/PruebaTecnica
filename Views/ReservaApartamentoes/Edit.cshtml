@model Prueba_Tecnica.Models.ReservaApartamento

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ReservaApartamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReserva" />
            <div class="form-group">
                <label asp-for="IdApartamento" class="control-label"></label>
                <select asp-for="IdApartamento" class="form-control" asp-items="ViewBag.IdApartamento"></select>
                <span asp-validation-for="IdApartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTemporada" class="control-label"></label>
                <select asp-for="IdTemporada" class="form-control" asp-items="ViewBag.IdTemporada"></select>
                <span asp-validation-for="IdTemporada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaLlegada" class="control-label"></label>
                <input asp-for="FechaLlegada" class="form-control" />
                <span asp-validation-for="FechaLlegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaSalida" class="control-label"></label>
                <input asp-for="FechaSalida" class="form-control" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Noches" class="control-label"></label>
                <input asp-for="Noches" class="form-control" />
                <span asp-validation-for="Noches" class="text-danger"></span>
            </div>
